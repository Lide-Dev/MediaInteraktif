<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_rounded_10dp_corner"
    android:backgroundTint="@color/colorPrimary"
    android:layout_margin="8dp"
    android:layout_width="200dp"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/materi_rv_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/app_dimen_default"
        android:src="@drawable/ic_rv_book"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/materi_rv_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_dimen_default"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materi_rv_img"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Materi 1" />

</androidx.constraintlayout.widget.ConstraintLayout>