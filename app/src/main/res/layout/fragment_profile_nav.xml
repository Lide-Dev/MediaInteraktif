<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/app_dimen_default">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_img_user"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/app_dimen_default"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/profile_layout_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_dimen_default"
        app:layout_constraintTop_toBottomOf="@id/profile_img_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nama"
            android:layout_marginEnd="@dimen/app_dimen_default"
            android:textColor="@color/littleBlue"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/profile_txt_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/putri_sherly_indrayanti"
            android:textColor="@color/littleBlue"
            android:textStyle="bold"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_layout_dosbing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_dimen_default"
        app:layout_constraintTop_toBottomOf="@id/profile_layout_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dosen_pembimbing"
            android:textColor="@color/littleBlue"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/littleBlue"
            android:text="@string/dosbing"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_layout_jurpend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_dimen_default"
        app:layout_constraintTop_toBottomOf="@id/profile_layout_dosbing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/jurpend"
            android:textColor="@color/littleBlue"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>